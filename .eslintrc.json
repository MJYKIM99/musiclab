{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": ["warn"],
    "no-console": ["off"],
    "camelcase": ["error", { "properties": "never" }],
    "comma-dangle": ["error", "never"],
    "object-curly-spacing": ["error", "always"],
    "array-bracket-spacing": ["error", "never"],
    "space-before-function-paren": ["error", {
      "anonymous": "never",
      "named": "never",
      "asyncArrow": "always"
    }]
  },
  "globals": {
    "loops": "readonly",
    "oscillators": "readonly",
    "envelopes": "readonly",
    "reverb": "readonly",
    "radiusPreview": "writable",
    "radiusState": "writable",
    "MAX_OSCILLATORS": "readonly",
    "BASE_FREQUENCY": "readonly",
    "backgroundColor": "writable",
    "bgAlpha": "writable",
    "createCanvas": "readonly",
    "windowWidth": "readonly",
    "windowHeight": "readonly",
    "frameRate": "readonly",
    "initAudio": "readonly",
    "mouseX": "readonly",
    "mouseY": "readonly",
    "colorMode": "readonly",
    "RGB": "readonly",
    "calculateTotalAmplitude": "readonly",
    "constrain": "readonly",
    "background": "readonly",
    "isLoopVisible": "readonly",
    "checkCollisions": "readonly",
    "handleLoopAudio": "readonly",
    "update": "readonly",
    "display": "readonly",
    "isDead": "readonly",
    "removeLoop": "readonly",
    "drawRadiusPreview": "readonly",
    "width": "readonly",
    "height": "readonly",
    "createLoops": "readonly",
    "resetAll": "readonly",
    "random": "readonly",
    "createVector": "readonly",
    "getAudioContext": "readonly",
    "outputVolume": "readonly",
    "fullscreen": "readonly",
    "saveCanvas": "readonly",
    "frameCount": "readonly",
    "map": "readonly",
    "touches": "readonly",
    "TWO_PI": "readonly",
    "noise": "readonly",
    "rotate": "readonly",
    "sin": "readonly",
    "cos": "readonly",
    "tan": "readonly",
    "pow": "readonly",
    "frameCount": "readonly",
    "pixelDensity": "readonly",
    "p5": "readonly",
    "Loop": "readonly",
    "BACKSPACE": "readonly",
    "DELETE": "readonly",
    "keyCode": "readonly",
    "key": "readonly"
  }
}
